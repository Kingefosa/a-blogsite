            <input data-id="btnAddTag" type="button" class="annytab-form-button" value="h2" />
            <input data-id="btnAddTag" type="button" class="annytab-form-button" value="h3" />
            <input data-id="btnAddTag" type="button" class="annytab-form-button" value="h4" />
            <input data-id="btnAddTag" type="button" class="annytab-form-button" value="p" />
            <input data-id="btnAddTag" type="button" class="annytab-form-button" value="code" />
            <input data-id="btnAddTag" type="button" class="annytab-form-button" value="span" />
            <input data-id="btnAddTag" type="button" class="annytab-form-button" value="div" />
            <input data-id="btnAddTag" type="button" class="annytab-form-button" value="line" />
            <input data-id="btnAddTag" type="button" class="annytab-form-button" value="space" />
